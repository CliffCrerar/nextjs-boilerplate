	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch observable",
			"program": "${workspaceFolder}/static/js/observable"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "JSON to CSS",
			"program": "${workspaceFolder}/static/lib/theme/index.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch via NPM",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"build"
			]
			//"cwd": "${workspaceFolder}/Next.js-site"
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/Next.js-site"
		}
	]
}